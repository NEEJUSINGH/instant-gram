<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenPostActivity"

>

<ImageView
    android:id="@+id/image_clicked"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:layout_marginTop="20dp"
    android:scaleType="centerCrop"
    android:padding="4dp"
    />
<TextView
    android:id="@+id/description_clicked"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_below="@id/image_clicked"
    android:text="this is hint given to you..."
    android:textSize="14sp"
    android:padding="15dp"
    android:layout_centerHorizontal="true"
    android:ems="10"
    android:inputType="textMultiLine" />

    />
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_below="@id/description_clicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/edit_clicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_below="@id/description_clicked"
            android:layout_marginEnd="100dp"
            android:padding="10dp"
            android:background="@android:color/darker_gray"
            />
        <Button
            android:id="@+id/delete_clicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_below="@id/description_clicked"

            android:padding="10dp"
            android:background="@android:color/holo_red_dark"
            />
    </LinearLayout>


</RelativeLayout>
</ScrollView>