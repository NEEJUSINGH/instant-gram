<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

       <!-- <item name="colorPrimaryDark">@color/sendblue</item> -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <!-- <item name="android:alertDialogStyle">@style/MyAlertDialogStyle</item> -->



    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:elevation">3dp</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
    </style>


    <style name="AlertDialogCustom" parent="@android:style/Holo.Light.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>

    </style>

    <style name="PopupMenu" parent="@android:style/Widget.Material.Light.PopupWindow">
       <item name="android:layout_marginRight">20dp</item>
        <item name="android:popupTheme">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>

        <item name="android:textSize">12sp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>


</resources>
